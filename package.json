{
  "name": "tienda-loyalty-system",
  "version": "1.0.0",
  "description": "Hybrid loyalty enrollment system with receipt monitoring",
  "main": "index.js",
  "scripts": {
    "start": "node scripts/start-all.js",
    "start:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start:electron": "cd electron-app && npm run dev",
    "install:all": "npm run install:backend && npm run install:electron",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:electron": "cd electron-app && npm install",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:electron\"",
    "build": "cd electron-app && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "loyalty",
    "pos",
    "retail",
    "electron",
    "fastapi",
    "websocket"
  ],
  "author": "Tienda Software Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  }
}
