{
  "name": "tienda-loyalty-electron",
  "version": "1.0.0",
  "description": "Electron desktop app for cashier interface",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "rebuild": "electron-rebuild",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "loyalty",
    "pos",
    "cashier"
  ],
  "author": "Tienda Software Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "socket.io-client": "^4.7.4",
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "node-hid": "^2.1.2"
  },
  "build": {
    "appId": "com.tienda.loyalty",
    "productName": "Tienda Loyalty System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
